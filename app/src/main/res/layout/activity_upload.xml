<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".navigation.upload.UploadActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="90dp"
            android:src="@android:drawable/sym_def_app_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_poster_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="맛있는 레시피를 함께 공유해보아요"
            android:textColor="@color/gray"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/iv_poster"
            app:layout_constraintStart_toStartOf="@id/iv_poster"
            app:layout_constraintTop_toBottomOf="@id/iv_poster" />

        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="33dp"
            android:text="이 레시피는"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_poster_subtitle" />

        <ImageView
            android:id="@+id/iv_three_cut"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/ic_no_select_cut"
            app:layout_constraintEnd_toStartOf="@id/iv_six_cut"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_text1" />

        <ImageView
            android:id="@+id/iv_six_cut"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/ic_no_select_cut"
            app:layout_constraintEnd_toStartOf="@id/iv_nine_cut"
            app:layout_constraintStart_toEndOf="@id/iv_three_cut"
            app:layout_constraintTop_toBottomOf="@id/tv_text1" />

        <ImageView
            android:id="@+id/iv_nine_cut"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@drawable/ic_no_select_cut"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_six_cut"
            app:layout_constraintTop_toBottomOf="@id/tv_text1" />

        <TextView
            android:id="@+id/tv_three_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="3컷"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/iv_three_cut"
            app:layout_constraintStart_toStartOf="@id/iv_three_cut"
            app:layout_constraintTop_toBottomOf="@id/iv_three_cut" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="6컷"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/iv_six_cut"
            app:layout_constraintStart_toStartOf="@id/iv_six_cut"
            app:layout_constraintTop_toBottomOf="@id/iv_six_cut" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="9컷"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/iv_nine_cut"
            app:layout_constraintStart_toStartOf="@id/iv_nine_cut"
            app:layout_constraintTop_toBottomOf="@id/iv_nine_cut" />

        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="레시피 필터"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_three_cut" />

        <TextView
            android:id="@+id/tv_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="해당되는 필터에 체크해주세요"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_text2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_upload_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_text3"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            />


        <Button
            android:id="@+id/btn_upload_recipe_next1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:enabled="false"
            android:text="다음"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_upload_filter"
            app:layout_constraintVertical_bias="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

