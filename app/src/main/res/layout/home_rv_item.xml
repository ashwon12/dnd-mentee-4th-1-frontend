<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal"
    app:layout_constraintCircleRadius="12dp"
    android:background="@drawable/home_rv_item_radius"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/iv_recent_item"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_no_image"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="13dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_home_title"
            style="@style/FontBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목" />

        <TextView
            android:id="@+id/tv_home_content"
            style="@style/FontBody2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLength="40"
            android:text="주요재료 고구마 30개 설탕 40스푼, 인내심과 참을성과 강아지..."
            android:textColor="#646568" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_home_theme1"
                style="@style/FontCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/theme_radius"
                android:text="3컷"
                android:textColor="@color/PrimaryColor" />

            <TextView
                android:id="@+id/tv_home_theme2"
                style="@style/FontCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_radius"
                android:layout_marginRight="8dp"
                android:text="태그"
                android:textColor="@color/PrimaryColor" />

            <TextView
                android:id="@+id/tv_home_theme3"
                style="@style/FontCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/theme_radius"
                android:layout_marginRight="8dp"
                android:text="태그"
                android:textColor="@color/PrimaryColor" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>