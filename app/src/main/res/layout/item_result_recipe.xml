<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp">

    <LinearLayout
        android:id="@+id/ll_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/item_result_recipe"
        android:elevation="5dp"
        android:orientation="vertical"
        android:translationZ="1dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_result_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/item_result_recipe"
                android:paddingBottom="27dp"
                android:scaleType="fitXY" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_tag_time"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/detail_tag_button"
                android:elevation="16dp"
                android:text="15분 이내"
                android:textColor="#FFFFFF"
                android:translationZ="16dp" />

            <LinearLayout
                android:id="@+id/ll_today_text"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_recipe_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="serif"
                    android:gravity="left|center_vertical"
                    android:hint="레시피 이름"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_weight="3"
                android:gravity="center_vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_result_main_ingredient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp">

                <ImageButton
                    android:id="@+id/iv_like_result"
                    android:layout_width="32dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:src="@drawable/rating_star_default" />

                <TextView
                    android:id="@+id/tv_star_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp">

                    <ImageButton
                        android:id="@+id/iv_subscribe"
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/watch" />

                    <TextView
                        android:id="@+id/tv_viewcount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_result_profile"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_face" />

                    <TextView
                        android:id="@+id/tv_result_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:gravity="center_vertical"
                        android:text="nickname"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp">

                    <ImageButton
                        android:id="@+id/iv_calendar"
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/calendar" />

                    <TextView
                        android:id="@+id/tv_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
